@page "/addresses"

<h3>AddressEntry</h3>

<EditForm Model="model" OnValidSubmit="ValidSubmit">

	<DataAnnotationsValidator />
	<ValidationSummary />

	<InputText @bind-Value="model.StreetAddress" placeholder="Street Address" class="form-control" />
	<InputText @bind-Value="model.City" placeholder="City" class="form-control" />
	<InputText @bind-Value="model.Region" placeholder="Region" class="form-control" />
	<InputText @bind-Value="model.PostalCode" placeholder="Postal Code" class="form-control" />


	<button class="btn btn-primary" type="submit">Submit</button>

</EditForm>


<h3>List of Addresses</h3>
<ul>

	@foreach (var a in addresses)
	{
		<li>@a.StreetAddress, @a.City, @a.Region, @a.PostalCode</li>
	}

</ul>


@code {

	private AddressModel model = new();
	private List<AddressModel> addresses = new();

	private void ValidSubmit()
	{
		addresses.Add(model);
		model = new();
	}

}
